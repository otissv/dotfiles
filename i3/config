# i3bar -------------------------------------------------------------------------------------------------------------------------
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  #status_command i3status
  status_command i3blocks
  position top

  # uncomment to auto hide
  #mode hide
  hidden_state hide
  modifier $mod

  # show system tray on primary monotir
  tray_output primary

  colors {
    background $focused_inactive-bg
    statusline $focused-text

    # class            border                  backgrd                 text
    focused_workspace  $accent                 $accent                 $focused-text
    active_workspace   $active_workspace-bd    $active_workspace-bg    $active_workspace-text
    inactive_workspace $inactive_workspace-bd  $inactive_workspace-bg  $inactive_workspace-text
    urgent_workspace   $urgent_workspace-bd    $urgent_workspace-bg    $urgent_workspace-text
  }
}


