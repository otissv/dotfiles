# exit menu -------------------------------------------------------------------------------------------------------------------------
set $mode_exit Exit menu - (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (alt+x) shutdown

mode "$mode_exit" {
  bindsym l exec --no-startup-id $exit lock, mode "default"
  bindsym e exec --no-startup-id killall intel-virtual-output && $exit logout, mode "default"
  bindsym s exec --no-startup-id $exit suspend, mode "default"
  bindsym h exec --no-startup-id $exit hibernate, mode "default"
  bindsym r exec --no-startup-id $exit reboot, mode "default"
  bindsym $mod+x exec --no-startup-id $exit shutdown, mode "default"
  # back to normal:  Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# menu
bindsym $mod+Control+Delete mode "$mode_exit"


