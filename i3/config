# fullscreen screenshoot (PrnScr)
bindsym Print exec $screen-capture $HOME/pictures/screen_shoots/`date +%Y-%m-%d_%H:%M:%S`.png  | xclip

# window screenshoot(Alt + PrnScr)
bindsym Mod1+Print exec $screen-capture $HOME/pictures/screen_shoots/`date +%Y-%m-%d_%H:%M:%S`.png  | xclip

# select windows screenshoot(Alt + Shift + PrnScr)
bindsym Mod1+Shift+Print exec $screen-capture -s $HOME/pictures/screen_shoots/`date +%Y-%m-%d_%H:%M:%S`.png


