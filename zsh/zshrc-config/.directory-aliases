alias cd.='cd ..'
alias cd..='cd ..'
alias cd~='cd ~'
alias mkdir="mkdir -p"


if [[ "$OS" == "darwin" ]]; then
  alias ls='ls'
  alias ll='ls -all'
  alias ld='ls -la | egrep "^d"'
  alias lf='ls -la | egrep -v '^d''
  alias lwd='ls -d */'
  alias lrt='ls -lrt'
  alias p='cd ~/otissv/google-drive'
elif [[ "$OS" == "linux" ]]; then
  alias p='cd ~/work/projects/'
  alias rui='cd ~/work/projects/react-uikit-components'
  alias sq='cd ~/work/projects/squadron'
  alias ls='ls --color=always'
  alias ll='ls -all --color=always'
  alias ld='ls -la --color=always | egrep "^d"'
  alias lf='ls -la --color=always | egrep -v '^d''
  alias lwd='ls -d */ --color=always '
  alias lrt='ls -lrt --color=always '
fi

# Run command on all subdirs in dir
function alldir {
  # for D in $1*/; do $($@); done
  # find $1 -maxdepth 1 -type f
  cmd=${@:2};

  find $1 -maxdepth 1 -type d \( ! -name . \) -exec bash -c "cd '{}' && $cmd" \;
}


function tc {
  touch $@
}

function mkcd {
  mkdir $1 && cd $1
}

# moute sshfs core user
function fscore {
  mkdir -p /mnt/sshfs/$2
  sshfs -o allow_other core@$1:/ /mnt/sshfs/$2
}

# moute sshfs root user
function fsroot {
  mkdir -p /mnt/sshfs/$2
  sshfs -o allow_other root@$1:/ /mnt/sshfs/$2
  cd /mnt/sshfs/$2
}

# ssh as core
function sshcore {
  ssh -A core@$1
}

# ssh as root
function sshroot {
  ssh root@$1
}


# unmount sshfs volume
function usshfs {
  sudo umount -f /mnt/sshfs/$1
}

# copy
function rcopy {
  rsync -azP --progress $@
}

function copy {
  rsync -vzP --progress $@
}
