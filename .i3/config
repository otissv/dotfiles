# General -----------------------------------------------------------------------------------------------------
# reload the configuration file
bindsym $mod+Control+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Control+r restart

# exit i3 (logs you out of your X session)
#bindsym $mod+Control+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# font
font pango: $font

# colors

#class                   border                backgr                text                    indicator
client.focused           $focused-bd           $focused-bg           $focused-text           $focused-indicator
client.focused_inactive  $focused_inactive-bd  $focused_inactive-bg  $focused_inactive-text
client.unfocused         $unfocused-bd         $unfocused-bg         $unfocused-text
client.urgent            $urgent-bd            $urgent-bg            $urgent-text
client.background        $background-bd


#  windows ------------------------------------------------------------------------------------------------------------------
#new window border size
new_window pixel 3

# kill focused window
bindsym $acc+BackSpace kill

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+F11 fullscreen

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# toggle tiling / floating
bindsym $mod+Control+space floating toggle

# change focus between tiling and floating windows
bindsym $mod+space focus mode_toggle

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child


# resize window ---------------------------------------------------------------------------------------------------------------
# resize window (you can also use the mouse for that)
mode "resize" {
  bindsym Left resize shrink width $resize px or $resize ppt
  bindsym Down resize grow height $resize px or $resize ppt
  bindsym Up resize shrink height $resize px or $resize ppt
  bindsym Right resize grow width $resize px or $resize ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Shift+r mode "resize"


# workspaces ---------------------------------------------------------------------------------------------------------------
# move through workspaces
bindsym $mod+Control+Left  workspace prev
bindsym $mod+Control+Right workspace next

# cyle through workspaces
bindsym $mod+Tab workspace next

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10



# i3bar -------------------------------------------------------------------------------------------------------------------------
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  #status_command i3status
  status_command i3blocks
  position top

  # uncomment to auto hide
  #mode hide
  hidden_state hide
  modifier $mod

  colors {
    background $focused_inactive-bg
    statusline $focused-text

    # class            border                  backgrd                 text
    focused_workspace  $accent                 $accent                 $focused-text
    active_workspace   $active_workspace-bd    $active_workspace-bg    $active_workspace-text
    inactive_workspace $inactive_workspace-bd  $inactive_workspace-bg  $inactive_workspace-text
    urgent_workspace   $urgent_workspace-bd    $urgent_workspace-bg    $urgent_workspace-text
  }
}


# system --------------------------------------------------------------------------------------------------------------------
set $mode_settings Settings menu - (1) Help, (2) Sound mixer, (3) Sound cards, (4)Wifi, (5) Bluetooth, (6) System monitor, (7) Dotfiles

mode "$mode_settings" {
  bindsym 1 exec  $browser $read
  bindsym 2 exec  $sound-mixer
  bindsym 3 exec  $sound-card
  bindsym 4 exec  $wifi-menu
  bindsym 5 exec  $bluetooth-menu
  bindsym 6 exec  $system-monitor
  bindsym 7 exec $code-editor $dot-path
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "  default"
}

# menu
bindsym $mod+Shift+s mode "$mode_settings"


# keyboard menu --------------------------------------------------------------------------------------------------------------------
set $mode_keyboard Keyboard menu - (1) US, (2) GB

mode "$mode_keyboard" {
  bindsym 1 exec setxkbmap $keyboard-layout1
  bindsym 2 exec setxkbmap $keyboard-layout2
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# menu
bindsym $mod+Shift+k mode "$mode_keyboard"


# display menu-------------------------------------------------------------------------------------------------------------------------

set $display1 LVDS-0
set $display2 HDMI-0

set $mode_display Display menu - (1) Built in only, (2) HDMI only, (3) Extended, (4) Clone

mode "$mode_display" {
  bindsym 1 exec --no-startup-id $terminal-x xrandr --output $display1 --auto --output $display2 --off
  bindsym 2 exec --no-startup-id $terminal-x xrandr --output $display1 --off --output $display2 --auto
  bindsym 3 exec --no-startup-id $terminal-x bash ~/dotfiles/.i3/dedetect_displays.sh
  bindsym 4 exec --no-startup-id $terminal-x xrandr  --output $display1 --auto --output $display2--auto
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# menu
bindsym $mod+Shift+d mode "$mode_display"


# exit menu -------------------------------------------------------------------------------------------------------------------------
set $mode_exit Exit menu - (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (x) shutdown

mode "$mode_exit" {
  bindsym l exec --no-startup-id $exit lock, mode "default"
  bindsym e exec --no-startup-id $exit logout, mode "default"
  bindsym s exec --no-startup-id $exit suspend, mode "default"
  bindsym h exec --no-startup-id $exit hibernate, mode "default"
  bindsym r exec --no-startup-id $exit reboot, mode "default"
  bindsym x exec --no-startup-id $exit shutdown, mode "default"
  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# menu
bindsym $mod+Control+Delete mode "$mode_exit"


# autostart -------------------------------------------------------------------------------------------------------------------
exec --no-startup-id $wallpaper
exec --no-startup-id $cloud

# application ---------------------------------------------------------------------------------------------------------------
bindsym $mod+Return exec $terminal

bindsym $mod+F1 exec  $launcher
bindsym $acc+space exec  i3-sensible-terminal -x $HOME/dotfiles/applications/quick-menu.sh
bindsym $acc+b exec      $browser
bindsym $acc+c exec      $code-editor
bindsym $acc+x exec      $text-editor
bindsym $acc+f exec      $file-manager
bindsym $acc+k exec      $voip
bindsym $acc+g exec      $games
bindsym $acc+v exec      $video
bindsym $acc+i exec      $image-editor
bindsym $acc+r exec      $vector-editor
bindsym $acc+o exec      $office
bindsym $acc+d exec      $downloader
bindsym $acc+t exec      $torrent
bindsym $acc+m exec      $music



