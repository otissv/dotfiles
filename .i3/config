set $downloader               youtube-dl-gui
set $text-editor              scribes
set $code-editor              atom
set $cddvd-burner             silicon

# set
set $read                     $dot-path/read.md
set $sound-card               $terminal-x bash $HOME/.asound-switcher
set $config                   $text-editor $dot-path
set $sound-mixer              $terminal-x alsamixer
set $wifi-menu                $terminal-x sudo wifi-menu wlp4s0
set $system-monitor           $terminal-x top
set $bluetooth-menu           blueman-manager

#keyboard
#Don't forget to change keyoard menu below!
set $keyboard-layout1         us
set $keyboard-layout2         gb




# application assignments ------------------------------------------------------------------------------------
assign [class="libreoffice"]         $ws5
