# mod keys -------------------------------------------------------------------------------------------------------------------
# Mod1 Alt key
set $mod Mod1

# Mod4 win (super) key
set $acc Mod4

# variables -------------------------------------------------------------------------------------------------------------------

# font
set $font Droid Sans, Icons 10

# path to location of i3exit
set $exit $HOME/.i3/i3exit

# path to dotfiles
set $dot-path $HOME/dotfiles

# path to wallpapers
set $wallpaper feh --randomize --bg-scale $HOME/wallpaper/randomise/*

# resize px/ppt
set $resize 1

# workspaces
set $ws1  1 One 
set $ws2  2 Two 
set $ws3  3 Two 
set $ws4  4 Code 
set $ws5  5 Edit 
set $ws6  6 Skype 
set $ws7  7 Play 
set $ws8  8 Download 
set $ws9  9 Games 
set $ws10 10 Win 

# applications
set $cloud                    dropboxd
set $terminal                 i3-sensible-terminal
set $terminal-x               i3-sensible-terminal -x
set $launcher                 dmenu_extended_run -i -p 'Arch Linux >>' -fn 'Roboto:pixelsize=30'  -nb '#111111' -nf '#999999' -sb '#111111' -sf '#D34836'
set $file-manager             pcmanfm
set $browser                  google-chrome-stable
set $office                   libreoffice
set $torrent                  transmission-gtk
set $video                    vlc
set $music                    i3-sensible-terminal -x ncmpcpp
set $games                    steam
set $image-editor             gimp
